@model S_CIngenieria.Models.Seguridad.Usuarios
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Registro" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="NombreUsuario">Nombre de Usuario</label>
        <input asp-for="NombreUsuario" class="form-control" required />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contraseña">Contraseña</label>
        <input asp-for="Contraseña" class="form-control" type="password" required />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombres">Nombres</label>
        <input asp-for="Nombres" class="form-control" required />
        <span asp-validation-for="Nombres" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellidos">Apellidos</label>
        <input asp-for="Apellidos" class="form-control" required />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Correo">Correo Electrónico</label>
        <input asp-for="Correo" class="form-control" required />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono">Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Imagen">Cargar Imagen de Perfil</label>
        <input type="file" class="form-control" id="Imagen" name="Imagen" accept="image/*" required />
        <span asp-validation-for="fotoPerfil" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="FkRol">Rol</label>
        <select asp-for="FkRol" class="form-control" required>
            <option value="">Seleccione un rol</option>
            <option value="1">Administrador</option>
            <option value="2">Cliente</option>
            <option value="3">Empresa</option>
        </select>
        <span asp-validation-for="FkRol" class="text-danger"></span>
    </div>

    @* Mostrar mensaje de error si existe *@
    @if (ViewData["Mensaje"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Mensaje"]
        </div>
    }

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model IEnumerable<S_CIngenieria.Models.Seguridad.Roles>

@{
    ViewData["Title"] = "Lista de Roles";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Nuevo Rol</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            <tr>
                <td>@rol.Id</td>
                <td>@rol.nombre</td>
                <td>@rol.Estado</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@rol.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@rol.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
